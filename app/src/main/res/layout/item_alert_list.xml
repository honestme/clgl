<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="@dimen/search_item_bangumi_image_height"
android:layout_marginBottom="@dimen/default_general_margin">


    <TextView
        android:id="@+id/item_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_tiny_padding"
        android:textColor="@color/color_primary"
        android:textSize="@dimen/default_medium_text_size" />

    <TextView
        android:id="@+id/item_alert_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_alert_title"
        android:padding="@dimen/default_tiny_padding"
        android:textColor="@color/color_primary"
        android:textSize="@dimen/default_small_text_size" />


    <TextView
        android:id="@+id/item_alert_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_alert_title"
        android:padding="@dimen/default_tiny_padding"
        android:textColor="@color/color_primary"
        android:textSize="@dimen/default_small_text_size" />

</RelativeLayout>
