<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical">

    <LinearLayout
        style="@style/settings_wrap_layout">
        <LinearLayout
            style="@style/settings_top_layout">
            <TextView style="@style/settings_textview"></TextView>
            <ImageView style="@style/settings_imageview"></ImageView>
        </LinearLayout>

        <View style="@style/settings_divide_line"></View>

        <LinearLayout
            style="@style/settings_middle_layout">
            <TextView style="@style/settings_textview"></TextView>
            <ImageView style="@style/settings_imageview"></ImageView>
        </LinearLayout>

        <View style="@style/settings_divide_line"></View>


        <LinearLayout
            style="@style/settings_bottom_layout">
            <TextView style="@style/settings_textview"></TextView>
            <ImageView style="@style/settings_imageview"></ImageView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
